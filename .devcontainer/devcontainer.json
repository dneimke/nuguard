{
  "name": "NuGuard Development",
  "dockerFile": "Dockerfile",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:1": {
      "version": "7.0"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.dotnet-interactive-vscode",
        "formulahendry.dotnet-test-explorer",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "ms-vscode.powershell",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker",
        "github.copilot",
        "github.copilot-chat",
        "github.copilot-labs",
        "bierner.markdown-mermaid",
        "tomoyukim.vscode-mermaid-editor",
        "pspester.pester-test",
        "TylerLeonhardt.vscode-pester-test-adapter",
        "ryanstedman.pester-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh",
        // PowerShell settings
        "powershell.codeLens.enable": true,
        "powershell.codeLens.references": true,
        "powershell.codeLens.referencesCustomColor": "#b2dfdb",
        "powershell.pester.codeLens": true,

        // TypeScript/JavaScript settings
        "typescript.referencesCodeLens.enabled": true,
        "javascript.referencesCodeLens.enabled": true,

        // Git settings
        "gitlens.codeLens.enabled": true,

        // Editor settings
        "editor.codeLens": true,
        "editor.codeLensFontFamily": "Consolas, 'Courier New', monospace",

        // Pester Test Settings
        "pester.autoRunOnSave": true,
        "pester.runTestsInNewProcess": true,
        "pester.outputViewLogLimit": 10000,
        "pester.debugOnFailure": true,
        "powershell.pester.codeLens": true,
        "powershell.pester.useLegacyCodeLens": false,
        "powershell.pester.debugOutputVerbosity": "Diagnostic",

        // Test Explorer Settings
        "testExplorer.gutterEnabled": true,
        "testExplorer.codeLens": true,
        "testExplorer.showCollapseAll": true,
        "testExplorer.addToEditorContextMenu": true,

        // PowerShell Test Settings
        "powershell.buttons.showPanelMovementButtons": true,
        "powershell.debugging.createTemporaryIntegratedConsole": true
      }
    }
  },
  "remoteUser": "vscode"
}
